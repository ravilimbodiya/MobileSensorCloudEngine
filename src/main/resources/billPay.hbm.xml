<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.cloud.entity.Usage" table="bill_pay">
		<id name="paymentId" type="integer">
			<column name="payment_id" />
			<generator class="identity" />
		</id>
        <property name="userId" type="integer" column="user_id"/>
        <property name="userName" type="string" column="credit_card_number"/>
        <property name="creditCardNumber" type="integer" column="credit_card_number"/>
        <property name="expirationDate" type="timestamp" column="expiration_date"/>		
		<property name="amount" column="amount" type="double" not-null="true"></property>
		<property name="paymentDate" column="payment_date" type="timestamp"></property>
		
	</class>
</hibernate-mapping>

